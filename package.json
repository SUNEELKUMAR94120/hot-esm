{
  "name": "hot-esm",
  "version": "0.0.0",
  "description": "ESM hot-reloading for Node.js",
  "keywords": [
    "hot",
    "hot-reloading",
    "hmr"
  ],
  "homepage": "https://github.com/vinsonchuong/hot-esm",
  "bugs": "https://github.com/vinsonchuong/hot-esm/issues",
  "license": "MIT",
  "author": "Vinson Chuong <vinsonchuong@gmail.com>",
  "type": "module",
  "main": "./index.js",
  "bin": {
    "hot": "./hot"
  },
  "repository": "vinsonchuong/hot-esm",
  "scripts": {
    "test": "xo && ava",
    "release": "semantic-release"
  },
  "dependencies": {
    "@parcel/watcher": "^2.0.0-alpha.11"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "ava-patterns": "^2.4.4",
    "quick-install": "^2.0.2",
    "semantic-release": "^18.0.0",
    "xo": "^0.44.0"
  },
  "xo": {
    "prettier": true,
    "space": 2,
    "semicolon": false,
    "rules": {
      "import/extensions": "off",
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "ava": {
    "verbose": true,
    "timeout": "5m"
  }
}
